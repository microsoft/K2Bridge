{
    "name": "K2Bridge dev environment",
    "build": {
        "dockerfile": "Dockerfile",
    },
    "extensions": [
        "hashicorp.terraform",
        "ms-vscode.azurecli"
    ],
    "forwardPorts": [5601, 9200],
    "settings": {
        "editor.formatOnSave": true,
        "terminal.integrated.defaultProfile.linux": "bash",
        "terminal.integrated.profiles.linux": {
            "bash": {
                "path": "/bin/bash",
                "icon": "terminal-bash"
            },
        }
    }
}